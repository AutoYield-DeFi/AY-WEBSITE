
---
// Main layout for the website
import '../index.css'; // Import the CSS

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "AutoYield | Smart Liquidity Management on Solana",
  description = "AutoYield uses advanced technology to maximize trading fees while protecting against impermanent loss in Meteora's DLMM pools on Solana."
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content="AutoYield" />
    <meta property="og:image" content="/og-image.png" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" />
  </head>
  <body>
    <slot />
  </body>
</html>
