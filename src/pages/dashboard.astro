
---
import MainLayout from '../layouts/MainLayout.astro';
import DashboardOverview from '../components/dashboard/DashboardOverview';
import PortfolioSummary from '../components/dashboard/PortfolioSummary';
import ActivePools from '../components/dashboard/ActivePools';
import RecentActivity from '../components/dashboard/RecentActivity';
---

<MainLayout 
  title="Dashboard | AutoYield"
  description="Monitor your liquidity pools, earnings, and portfolio performance in real-time"
>
  <div class="min-h-screen bg-gradient-to-b from-primary-muted/30 to-white pt-20">
    <div class="container mx-auto px-6 py-8">
      <!-- Dashboard Header -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold">Dashboard</h1>
        <p class="text-muted-foreground">Monitor your liquidity pools and earnings</p>
      </div>
      
      <!-- Dashboard Overview Cards -->
      <DashboardOverview client:load />
      
      <!-- Portfolio Summary -->
      <div class="mt-10">
        <h2 class="text-2xl font-semibold mb-6">Portfolio Summary</h2>
        <PortfolioSummary client:load />
      </div>
      
      <!-- Active Pools -->
      <div class="mt-10">
        <h2 class="text-2xl font-semibold mb-6">Active Pools</h2>
        <ActivePools client:load />
      </div>
      
      <!-- Recent Activity -->
      <div class="mt-10">
        <h2 class="text-2xl font-semibold mb-6">Recent Activity</h2>
        <RecentActivity client:load />
      </div>
    </div>
  </div>
</MainLayout>
